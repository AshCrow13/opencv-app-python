<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Switch para activar reconocimiento autom치tico -->
        <Switch
            android:id="@+id/switchAutoRecognition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activar Reconocimiento Autom치tico" />

        <!-- Selector de almacenamiento -->
        <Button
            android:id="@+id/btnSelectStorage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Carpeta de Almacenamiento" />

        <!-- Configuraci칩n Bluetooth -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conexi칩n Bluetooth"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <Spinner
            android:id="@+id/spinnerBluetoothDevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnConnectBluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conectar al Dispositivo" />


    </LinearLayout>
</ScrollView>
